<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :cache_image, class: "control-label" %>
    <%= text_input f, :cache_image, class: "form-control" %>
    <%= error_tag f, :cache_image %>
  </div>

  <div class="form-group">
    <%= label f, :dockerfile, class: "control-label" %>
    <%= text_input f, :dockerfile, class: "form-control" %>
    <%= error_tag f, :dockerfile %>
  </div>

  <div class="form-group">
    <%= label f, :context, class: "control-label" %>
    <%= text_input f, :context, class: "form-control" %>
    <%= error_tag f, :context %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
